@model Employee
@{
    ViewData["Title"] = "create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Datos del empleado</h1>
        <div class="row">
            <div class="col-6">
                <label asp-for="Name"></label>
                <input asp-for="Name" disabled class="form-control" />
            </div>
            <div class="col-6">
                <label asp-for="Address"></label>
                <input asp-for="Address" disabled class="form-control" />
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-6">
                <label asp-for="Salary"></label>
                <input asp-for="Salary" disabled class="form-control" />
            </div>
            <div class="col-6">
                <label asp-for="Email"></label>
                <input asp-for="Email" disabled class="form-control" />
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                <a class="btn btn-success mx-2" style="width:40%" asp-controller="Employees" asp-action="Index">Volver atras</a>
              
            </div>
        </div>
</div>

