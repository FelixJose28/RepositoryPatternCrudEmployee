@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a class="btn btn-success float-right mb-4" asp-action="Create"><strong>+</strong> Agregar Empleado</a>
@if (Model.Count() > 0)
{


<h1 class="text-info mt-2">Lista de empleados</h1>

<table class="table table-striped mt-4">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Salario</th>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Address</td>
                <td>@employee.Salary</td>
                <td>@employee.Email</td>
                <td>
                    <a class="btn btn-info mx-1 w-25" asp-route-id="@employee.Id" asp-action="Detail">Detalles</a>
                    <a class="btn btn-warning mx-1 w-25" asp-route-id="@employee.Id" asp-action="Edit">Editar</a>
                    <a class="btn btn-danger mx-1 w-25" asp-route-id="@employee.Id" asp-action="Delete">Borrar</a>
                </td>
            </tr>
        }

    </tbody>
</table>
}
else
{
    <h1 class="text-center mt-4 text-danger" >No hay empleados </h1>
}