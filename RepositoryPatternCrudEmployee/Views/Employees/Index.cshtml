@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a class="btn btn-success float-right mb-4" asp-action="Create">Agregar Empleado</a>
@if (Model.Count() > 0)
{


<h1 class="text-info mt-2">Lista de empleados</h1>

<table class="table table-striped mt-4">
    <thead>
        <tr>
            <td>Nombre</td>
            <td>Direccion</td>
            <td>Salario</td>
            <td>Correo</td>
            <td>Acciones</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <th>@employee.Name</th>
                <th>@employee.Address</th>
                <th>@employee.Salary</th>
                <th>@employee.Email</th>
                <th>
                    <a class="btn btn-info w-25" asp-route-id="@employee.Id" asp-action="Detail">Detalles</a>
                    <a class="btn btn-warning w-25" asp-route-id="@employee.Id" asp-action="Edit">Editar</a>
                    <a class="btn btn-danger w-25" asp-route-id="@employee.Id" asp-action="Delete">Borrar</a>
                </th>
            </tr>
        }

    </tbody>
</table>
}
else
{
    <h1 class="text-center mt-4 text-danger" >No hay empleados </h1>
}